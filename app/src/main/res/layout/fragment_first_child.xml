<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstChildFrag"
    android:id="@+id/frag_first_child_container"
    android:orientation="vertical"
    android:background="@color/dark_gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/first_child_fragment"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generateFirst"
            android:id="@+id/frag_parent_layout_first"
            android:layout_gravity="center_horizontal"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/first_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>